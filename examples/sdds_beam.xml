<?xml version="1.0"?>
<teufel description="Example - bunch compressor chicane with input particles from ELEGANT watch point"
    author="Ulf Lehnert 15.9.2021">
    <lattice>
        <calc print="chicane field [T] = " var="B" eq="0.46" />
        <dipole name="MD1" type="hard edge">
            <B x="0.0" y="-B" z="0.0" />
            <p1 x="0.0" y="0.0" z="0.130" />
            <n1 x="0.0" y="0.0" z="-1.0" />
            <p2 x="0.0" y="0.0" z="0.280" />
            <n2 x="0.0" y="0.0" z="1.0" />
        </dipole>
        <dipole name="MD2" type="hard edge">
            <B x="0.0" y="B" z="0.0" />
            <p1 x="0.0" y="0.0" z="1.030" />
            <n1 x="0.0" y="0.0" z="-1.0" />
            <p2 x="0.0" y="0.0" z="1.180" />
            <n2 x="0.0" y="0.0" z="1.0" />
        </dipole>
        <dipole name="MD3" type="hard edge">
            <B x="0.0" y="B" z="0.0" />
            <p1 x="0.0" y="0.0" z="1.570" />
            <n1 x="0.0" y="0.0" z="-1.0" />
            <p2 x="0.0" y="0.0" z="1.720" />
            <n2 x="0.0" y="0.0" z="1.0" />
        </dipole>
        <dipole name="MD4" type="hard edge">
            <B x="0.0" y="-B" z="0.0" />
            <p1 x="0.0" y="0.0" z="2.470" />
            <n1 x="0.0" y="0.0" z="-1.0" />
            <p2 x="0.0" y="0.0" z="2.620" />
            <n2 x="0.0" y="0.0" z="1.0" />
        </dipole>
    </lattice>
    <beam>
        <SDDS file="tests/test.sdds">
            <log file="sdds_beam_log.sdds" step="10" />
        </SDDS>
    </beam>
    <calc print="tracking length [m] = " var="total_L" eq="3.0" />
    <calc print="tracking total time [s] = " var="total_t" eq="total_L/_c" />
    <calc print="dt = " var="dt" eq="total_t/20000" />
    <tracking method="Vay" delta_t="dt" n="20000">
        <watch step="0" file="sdds_beam_initial.hdf5" />
        <watch step="20000" file="sdds_beam_final.hdf5" />
    </tracking>
    <observer />
</teufel>
